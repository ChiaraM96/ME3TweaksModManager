<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Authors>Mgamerz</Authors>
    <Company>ME3Tweaks</Company>
    <Product>ME3Tweaks Mod Manager Localizer</Product>
    <Description>Localizes the ME3Tweaks files from github</Description>
    <Copyright>2020 ME3Tweaks</Copyright>
    <ApplicationIcon>localizericon.ico</ApplicationIcon>
    <Version>1.0.3</Version>
    <AssemblyVersion>1.0.3.0</AssemblyVersion>
    <FileVersion>1.0.3.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AuthenticodeExaminer" Version="0.3.0" />
    <PackageReference Include="AvalonEdit" Version="6.0.1" />
    <PackageReference Include="Fody" Version="6.0.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Octokit" Version="0.36.0" />
    <PackageReference Include="PropertyChanged.Fody" Version="3.2.4" />
  </ItemGroup>

  <ItemGroup>
    <TrimmerRootAssembly Include="System.Memory" />
    <TrimmerRootAssembly Include="System.Net" />
    <TrimmerRootAssembly Include="System.Linq.Queryable" />
  </ItemGroup>
</Project>