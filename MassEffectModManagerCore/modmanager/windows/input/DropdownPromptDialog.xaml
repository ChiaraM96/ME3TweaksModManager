<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        x:Class="ME3TweaksModManager.modmanager.windows.input.DropdownPromptDialog"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock Margin="5" TextWrapping="Wrap" Text="{Binding DisplayString}"/>
        <xctk:WatermarkComboBox SelectedItem="{Binding SelectedItem}" ItemsSource="{Binding Items}"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="{DynamicResource string_ok}" IsDefault="True" Margin="5" Width="40" Height="25" Click="OK_Click" />
            <Button Content="{DynamicResource string_cancel}" IsCancel="True" Margin="5" Width="50" Height="25" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>