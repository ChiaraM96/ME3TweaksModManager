             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <!-- Single Selector: Option is at top in bold, with the text directly below it -->
        <TextBlock Text="{Binding SelectedOption.FriendlyName, StringFormat='Option: {0}'}" FontStyle="Italic" DockPanel.Dock="Top" FontWeight="Bold" Visibility="{Binding GroupName, Converter={StaticResource NullVisibilityConverter}, ConverterParameter='Not'}"/>
        <!-- Single Selector: Option is at top in bold, with the text directly below it -->
        <TextBlock Text="{Binding GroupName}" TextWrapping="Wrap" Visibility="{Binding GroupName, Converter={StaticResource NullVisibilityConverter}}" FontWeight="Bold" DockPanel.Dock="Top"/>
        <CheckBox DockPanel.Dock="Left" Visibility="{Binding GroupName, Converter={StaticResource NullVisibilityConverter}, ConverterParameter='Reversed'}"/>
        <xctk:DropDownButton DockPanel.Dock="Right">
            <xctk:DropDownButton.DropDownContent>
                <ItemsControl ItemsSource="{Binding OtherOptions}"/>
            </xctk:DropDownButton.DropDownContent>
        </xctk:DropDownButton>
        <TextBlock Text="{Binding SelectedOption.Description}" TextWrapping="Wrap"/>
