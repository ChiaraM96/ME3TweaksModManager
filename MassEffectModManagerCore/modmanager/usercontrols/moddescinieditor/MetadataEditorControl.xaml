<local:ModdescEditorControlBase x:Class="MassEffectModManagerCore.modmanager.usercontrols.moddescinieditor.MetadataEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MassEffectModManagerCore.modmanager.usercontrols.moddescinieditor"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>

    <StackPanel>
        <local:DescriptorEditorItemsControl Header="ModManager" ItemsSource="{Binding ModManagerParameterMap}"/>
        <local:DescriptorEditorItemsControl Header="ModInfo" ItemsSource="{Binding ModInfoParameterMap}"/>
        <local:DescriptorEditorItemsControl Header="UPDATES" ItemsSource="{Binding UPDATESParameterMap}"/>
    </StackPanel>
    </ScrollViewer>
</local:ModdescEditorControlBase>
